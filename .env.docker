# Docker Environment Configuration
# Copy this file to .env when using Docker setup

# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here
COMMAND_PREFIX=!

# Azure AI Configuration (for LLM responses)
AZURE_ENDPOINT=https://your-endpoint.models.ai.azure.com
AZURE_API_KEY=your_azure_api_key_here

# Database Configuration (Docker setup)
DATABASE_URL=postgresql://timeline_user:timeline_pass@postgres:5432/character_simulation
TIMELINE_DATABASE_URL=postgresql://timeline_user:timeline_pass@timeline_db:5432/timeline_db

# Vector Database Configuration (Docker internal)
QDRANT_URL=http://qdrant:6333

# Redis Configuration (Docker internal)
REDIS_URL=redis://redis:6379

# MCP Server Configuration (Docker internal networking)
MCP_SERVER_URL=http://mcp_server:8000
MCP_SERVER_HOST=0.0.0.0
MCP_SERVER_PORT=8000

# PostgreSQL Configuration
POSTGRES_DB=character_simulation
POSTGRES_USER=timeline_user
POSTGRES_PASSWORD=timeline_pass
TIMELINE_DB_PASSWORD=secure_password

# Character Data Storage (Docker volumes)
CHARACTER_DATA_DIR=/app/character_data
MODEL_CACHE_DIR=/app/model_cache

# Embedding Model Configuration
EMBEDDING_MODEL=moka-ai/m3e-small
EMBEDDING_CACHE_DIR=/app/embedding_cache

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/app/logs/character_simulation.log

# Performance Settings
MAX_CONCURRENT_REQUESTS=10
RESPONSE_TIMEOUT=30
RAG_SEARCH_TIMEOUT=10

# Feature Flags
ENABLE_HYDE=true
ENABLE_PERSONALITY_VALIDATION=true
ENABLE_EMOTION_TRACKING=true
ENABLE_CONVERSATION_ANALYTICS=true

# Docker-specific settings
PYTHONUNBUFFERED=1
PYTHONPATH=/app