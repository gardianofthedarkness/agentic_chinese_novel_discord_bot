# MCP Character Simulation Server Dockerfile
FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    git \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements
COPY mcp_requirements.txt requirements.txt
COPY requirements.txt backend_requirements.txt

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt
RUN pip install --no-cache-dir -r backend_requirements.txt

# Install PostgreSQL adapter
RUN pip install psycopg2-binary

# Copy application code
COPY mcp_server.py .
COPY enhanced_rag.py .
COPY character_config.py .
COPY personality_engine.py .
COPY timeline_models.py .
COPY timeline_database.py .
COPY integrated_main.py .
COPY src/ ./src/

# Create directories
RUN mkdir -p character_data model_cache logs

# Set environment variables
ENV PYTHONPATH=/app
ENV PYTHONUNBUFFERED=1

# Expose port
EXPOSE 8000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Run the integrated main application
CMD ["python", "integrated_main.py"]