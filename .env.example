# ü§ñ Agentic Chinese Novel Discord Bot - Environment Configuration
# 
# SECURITY: Copy this file to .env and fill in your actual values
# NEVER commit .env to git - it contains sensitive API keys!

# =====================================
# üì¢ DISCORD BOT CONFIGURATION 
# =====================================
# Get these from: https://discord.com/developers/applications
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_discord_client_id_here
DISCORD_APP_ID=your_discord_app_id_here
DISCORD_PUBLIC_KEY=your_discord_public_key_here
DISCORD_PERMISSIONS=1126280011454656
COMMAND_PREFIX=!

# =====================================
# üß† AI SERVICE CONFIGURATION
# =====================================
# DeepSeek API (Primary AI - Chinese literature optimized)
# Get API key from: https://platform.deepseek.com/api_keys
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1

# Azure AI (Alternative/Fallback)
AZURE_ENDPOINT=https://your-endpoint.models.ai.azure.com
AZURE_API_KEY=your_azure_api_key_here

# =====================================
# üóÑÔ∏è DATABASE CONFIGURATION
# =====================================
# PostgreSQL (Main database for structured data)
DATABASE_URL=postgresql://admin:admin@localhost:5432/novel_sim

# Qdrant (Vector database for RAG/semantic search)
QDRANT_URL=http://localhost:6333
EMBEDDING_MODEL=moka-ai/m3e-small

# =====================================
# üöÄ SERVER CONFIGURATION
# =====================================
# API Server (Flask backend)
API_SERVER_URL=http://localhost:5005

# MCP Server (Model Context Protocol)
MCP_SERVER_URL=http://localhost:8000
MCP_SERVER_HOST=0.0.0.0
MCP_SERVER_PORT=8000

# =====================================
# üé≠ CHARACTER ENGINE SETTINGS
# =====================================
CHARACTER_DATA_DIR=character_data
MAX_MEMORY_PER_CHARACTER=1000
ENABLE_TIMELINE_ENCODING=true
ENABLE_DEEP_BEHAVIOR_MODEL=true
CHARACTER_STATE_VECTOR_SIZE=1024
MAX_TIMELINE_HISTORY=100
EMOTION_UPDATE_THRESHOLD=0.1

# =====================================
# ‚ö° PERFORMANCE SETTINGS
# =====================================
MAX_CONCURRENT_REQUESTS=10
RESPONSE_TIMEOUT=30
RAG_SEARCH_TIMEOUT=10

# =====================================
# üß™ FEATURE FLAGS
# =====================================
ENABLE_HYDE=true
ENABLE_PERSONALITY_VALIDATION=true
ENABLE_EMOTION_TRACKING=true
ENABLE_CONVERSATION_ANALYTICS=false

# =====================================
# üìù LOGGING CONFIGURATION
# =====================================
LOG_LEVEL=INFO
LOG_FILE=character_simulation.log